
<p style="color: green"><%= notice %></p>
<br />
<div class="container">
<%= button_to 'Log Out', logout_path, method: :delete, class:"btn btn-dark " %>
</div>
<br />
<div class="container">
  <%= link_to "Back", home_link_path, class:"btn btn-secondary " %>
</div>
<h1 align="center">List Of Giftcards</h1>
<br/>
<div class="container" style="border:1px solid black">

<table class="table table-striped table-bordered table-hover">

<thead class="table-dark">
<tr>
<th>Order Id</th>
<th>User Id</th>
<th>Name</th>
<th>Ordered Date</th>
<th>Address</th>
<th>Phone Number</th>
<th>Gift Card Value</th>
<th>Commission(10%)</th>
<th>Delievry Status</th>
</tr>
</thead>
<tbody>
  <% @giftcards.each do |giftcard| %>
    <tr>
    <td><%=giftcard.id%></td>
    <td><%=giftcard.user_id%></td>
    <td><%=giftcard.first_name %>
    <%=giftcard.last_name %>
    </td>
    <td><%=giftcard.order_date%></td>
   <td><%=giftcard.address%></td>
   <td><%=giftcard.mob_no%></td>
   <td><strong>INR. </strong><%=giftcard.gift_card_value%></td>
    <td><strong>INR. </strong><%=giftcard.commission%></td>
    <td><%=giftcard.status%></td>
    </tr>

  <% end %>
</tbody>
</table>

</div>
<br />
<div class="container">
    <h1>Total Amount : <%=@total_amt%></h1> 
    <h1>Total Commission : <%=@total_com%></h1>
</div>